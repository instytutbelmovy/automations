  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: verti_cli",
      "type": "debugpy",
      "request": "launch",
      "module": "automations.verti_cli",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "args": "${command:pickArgs}"
    },
    {
      "name": "Python: unittest",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
          "${file}"
      ],
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Python: verti_conversion",
      "type": "debugpy",
      "request": "launch",
      "module": "devops.verti_conversion",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    },
  ]
}